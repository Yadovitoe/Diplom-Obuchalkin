@{
    Layout = null; // Отключаем макет
    ViewBag.Title = "Тренер";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Специалист по обучению</title>
    <link rel="stylesheet" href="~/Content/Styles/Coach.css" />
</head>
<body>
    <div class="header">
        <img src="~/Content/Image/Logo.png" alt="Логотип" class="logo" />
        <a href="@Url.Action("Logout", "Account")">Выйти</a>
    </div>

    <div class="container">
        <!-- Навигация -->
        <div class="navigation">
            <a href="#courses" class="btn">Управление курсами и тестами</a>
            <a href="#results" class="btn">Результаты обучающихся</a>
        </div>

        <!-- Управление группами пользователей -->
        <div id="groups" class="section">
            <h2>Управление группами пользователей</h2>
            <button class="btn">Создать новую группу</button>
            <div class="group-list">
                <div class="group-item">
                    <h3>Группа 1</h3>
                    <p>Количество пользователей: 15</p>
                    <div class="actions">
                        <button class="btn">Назначить курс</button>
                        <button class="btn">Просмотреть</button>
                        <button class="btn">Редактировать</button>
                        <button class="btn btn-danger">Удалить</button>
                    </div>
                </div>
                <div class="group-item">
                    <h3>Группа 2</h3>
                    <p>Количество пользователей: 10</p>
                    <div class="actions">
                        <button class="btn">Назначить курс</button>
                        <button class="btn">Просмотреть</button>
                        <button class="btn">Редактировать</button>
                        <button class="btn btn-danger">Удалить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>